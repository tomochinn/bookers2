<!--User Infoの部分テンプレート-->
<h2>User info</h2>
  <%= image_tag "default-image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
        <tr>
          <th>
            <%= link_to edit_user_path(user.id) do %>
            <div class="btn btn-outline-secondary btn-block">
            <i class="fa-solid fa-user-gear"></i>
            </div>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>

<!--New Bookの部分テンプレート-->
<h2>New book</h2>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %></br>

  <%= f.submit 'Create Book', class: "btn btn-success" %>

<% end %>