<h1>User info</h1>
<!--form with部分-->
<%= form_with model: @user do |f| %>
  <h4>IMAGE</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>name</h4>
  <%= f.text_field :name %>

  <h4>introdaction</h4>
  <%= f.text_area :introduction %>

  <%= f.submit '投稿' %>
<% end %>

<h1>New book</h1>
<!--form with部分-->
<% form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>