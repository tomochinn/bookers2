<div>
  <%= flash[:notice] %>
</div>

<main>
  <body>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">

          <!--New BookとUser infoの部分テンプレート-->
          <%= render 'book', book: @book, user: @user %>
        </div>

        <!--Books部分-->
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <% if @user.profile_image.attached? %>
                  <%= image_tag @user.get_profile_image %>
                  <% else %>
                  <%= image_tag 'default-image.jpg' %>
                  <% end %>
                </td>
            　　  <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</main>