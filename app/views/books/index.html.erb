<main>
  <body>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          
          <!--User info部分-->
          <h2>User info</h2>
            <%= image_tag "default-image.jpg" %>
            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                </tr>
                <tr>
                  <th>
                    <%= link_to edit_user_path(@user.id) do %>
                      <div class="btn btn-outline-secondary btn-block">
                      <i class="fa-solid fa-user-gear"></i>
                      </div>
                    <% end %>
                  </th>
                </tr>
              </tbody>
            </table>
    
          <!--New Bookの部分テンプレート-->
          <%= render 'book', book: @book %>
        </div>
    
        <!--Books部分-->
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td></td>
            　　  <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</main>