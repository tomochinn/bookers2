<%= render 'book', books: @books %>

<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th colspan="2"></th>
    </tr>
  </thead>

  <% @book.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id) ,method: :delete %></td>
    </tr>
  </tbody>
  <% end %>
</table>
