<!DOCTYPE html>
<html>
  <head></head>
  
  <body>
    <h2>User info</h2>
    <%= form_with model: @user do |f| %>
      <label for="inputName">Name</label>
      <%= f.text_field :name, id:"inputName", placeholder:"Name" %>
      <label for="inputImage">ProfileImage</label>
      <%= f.field :profile_image, placeholder: "Image", accept: "image/*" %>
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"Introduction" %>
      <%= f.submit "Update User" %>
    <% end %>
  </body>